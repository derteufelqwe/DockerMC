{
  "description": "DockerMC logging plugin",
  "documentation": "-",
  "entrypoint": ["java", "-jar", "/plugin/DMCDockerPlugin.jar"],
  "interface": {
    "socket": "dmcdriver.sock",
    "types": ["docker.logdriver/1.0", "docker.volumedriver/1.0"]
  },
  "env": [
    {
      "name": "LOG_LEVEL",
      "description": "Set log level to output for plugin logs",
      "value": "INFO",
      "settable": ["value"]
    }
  ],
  "network": {
    "type": "host"
  },
  "mounts": [
    {
      "destination": "/var/log/dmcdriver",
      "options": [
        "rbind"
      ],
      "name": "logfolder",
      "source": "/var/log",
      "settable": [
        "source"
      ],
      "type": "bind"
    }
  ]
}
