        </repository>
        <!--  Minecraft Vault-->
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
        <!--  FÃ¼r: org.sonatype.sisu:sisu-guice:jar:noaop  -->
